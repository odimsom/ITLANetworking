@model ITLANetworking.Core.Application.ViewModels.User.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="scrollable-container">
    <div class="min-h-screen flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div class="text-center">
                <div class="mx-auto h-16 w-16 bg-sky-100 rounded-full flex items-center justify-center mb-4">
                    <i class="fas fa-graduation-cap text-2xl text-sky-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900">Iniciar Sesión</h2>
                <p class="mt-2 text-sm text-gray-600">
                    Accede a tu cuenta de ITLA Networking
                </p>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <span>@TempData["ErrorMessage"]</span>
                    </div>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                </div>
            }

            <form asp-action="Login" method="post" class="mt-8 space-y-6">
                <div class="space-y-4">
                    <div>
                        <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1">
                            Nombre de Usuario
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-400"></i>
                            </div>
                            <input asp-for="UserName"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Ingresa tu nombre de usuario" />
                        </div>
                        <span asp-validation-for="UserName" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">
                            Email del Usuario
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-400"></i>
                            </div>
                            <input asp-for="Email"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   type="email"
                                   placeholder="Ingresa tu nombre de usuario" />
                        </div>
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">
                            Contraseña
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input asp-for="Password"
                                   type="password"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Ingresa tu contraseña" />
                        </div>
                        <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="text-sm">
                            <a asp-action="ForgotPassword" class="font-medium text-sky-600 hover:text-sky-500 transition-colors">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <i class="fas fa-sign-in-alt text-sky-500 group-hover:text-sky-400"></i>
                        </span>
                        Iniciar Sesión
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-sm text-gray-600">
                        ¿No tienes una cuenta?
                        <a asp-action="Register" class="font-medium text-sky-600 hover:text-sky-500 transition-colors">
                            Regístrate aquí
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .scrollable-container {
        max-height: 100vh;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: #0ea5e9 #f1f5f9;
    }

        .scrollable-container::-webkit-scrollbar {
            width: 6px;
        }

        .scrollable-container::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        .scrollable-container::-webkit-scrollbar-thumb {
            background: #0ea5e9;
            border-radius: 3px;
        }

            .scrollable-container::-webkit-scrollbar-thumb:hover {
                background: #0284c7;
            }
</style>
