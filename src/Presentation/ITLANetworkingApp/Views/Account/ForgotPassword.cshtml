@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_AuthLayout";
}

<!-- Enhanced Forgot Password Form -->
<div class="space-y-6">
    
    <!-- Header Section -->
    <div class="text-center mb-8">
        <div class="flex justify-center mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-2xl flex items-center justify-center shadow-lg animate-pulse">
                <i class="fas fa-key text-2xl text-white"></i>
            </div>
        </div>
        <h2 class="text-2xl font-bold text-white mb-2">¿Olvidaste tu contraseña?</h2>
        <p class="text-white/70">No te preocupes, te ayudamos a recuperarla</p>
    </div>

    <!-- Error Message -->
    @if (Model.HasError)
    {
        <div class="bg-red-500/20 backdrop-blur-sm border border-red-400/30 text-red-100 px-4 py-3 rounded-xl mb-6 animate-slide-up" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle mr-3 text-red-300"></i>
                <div>
                    <strong class="font-semibold">¡Error!</strong>
                    <span class="block sm:inline ml-1">@Model.Error</span>
                </div>
            </div>
        </div>
    }

    <!-- Instructions -->
    <div class="bg-blue-500/20 backdrop-blur-sm border border-blue-400/30 text-blue-100 px-4 py-3 rounded-xl mb-6">
        <div class="flex items-start">
            <i class="fas fa-info-circle mr-3 text-blue-300 mt-0.5"></i>
            <div>
                <p class="text-sm">
                    Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.
                </p>
            </div>
        </div>
    </div>

    <!-- Forgot Password Form -->
    <form asp-action="ForgotPassword" method="post" class="space-y-6">
        
        <!-- Email Field -->
        <div class="space-y-2">
            <label asp-for="Email" class="block text-sm font-medium text-white/90 flex items-center">
                <i class="fas fa-envelope mr-2 text-white/60"></i>
                Correo Electrónico
            </label>
            <div class="relative">
                <input asp-for="Email" 
                       placeholder="tu@email.com"
                       class="input-field w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent transition-all duration-300" />
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                    <i class="fas fa-envelope text-white/40"></i>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
            <button type="submit"
                    class="w-full bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white font-semibold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 flex items-center justify-center space-x-2">
                <i class="fas fa-paper-plane"></i>
                <span>Enviar Instrucciones</span>
            </button>
        </div>

        <!-- Back to Login -->
        <div class="text-center pt-4">
            <a asp-action="Login" 
               class="inline-flex items-center space-x-2 text-white/80 hover:text-white font-medium transition-colors duration-200">
                <i class="fas fa-arrow-left"></i>
                <span>Volver al inicio de sesión</span>
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
