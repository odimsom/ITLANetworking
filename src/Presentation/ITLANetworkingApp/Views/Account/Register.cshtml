@model ITLANetworking.Core.Application.ViewModels.User.SaveUserViewModel

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="scrollable-container">
    <div class="min-h-screen flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div class="text-center">
                <div class="mx-auto h-16 w-16 bg-sky-100 rounded-full flex items-center justify-center mb-4">
                    <i class="fas fa-graduation-cap text-2xl text-sky-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900">Crear Cuenta</h2>
                <p class="mt-2 text-sm text-gray-600">
                    Únete a la comunidad de ITLA Networking
                </p>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <span>@TempData["ErrorMessage"]</span>
                    </div>
                </div>
            }

            <form asp-action="Register" method="post" enctype="multipart/form-data" class="mt-8 space-y-6">
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">
                                Nombre
                            </label>
                            <input asp-for="FirstName"
                                   class="block w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Tu nombre" />
                            <span asp-validation-for="FirstName" class="text-red-500 text-sm mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">
                                Apellido
                            </label>
                            <input asp-for="LastName"
                                   class="block w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Tu apellido" />
                            <span asp-validation-for="LastName" class="text-red-500 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1">
                            Nombre de Usuario
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-400"></i>
                            </div>
                            <input asp-for="UserName"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Elige un nombre de usuario" />
                        </div>
                        <span asp-validation-for="UserName" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Foto de Perfil (opcional)
                        </label>
                        <input asp-for="Image" type="file"
                               accept="image/*"
                               class="block w-full text-sm text-gray-700 border border-gray-300 rounded-lg cursor-pointer focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors" />
                        <span asp-validation-for="Image" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">
                            Correo Electrónico
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input asp-for="Email"
                                   type="email"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="tu@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">
                            Teléfono
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-phone text-gray-400"></i>
                            </div>
                            <input asp-for="Phone"
                                   type="tel"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="(809) 123-4567" />
                        </div>
                        <span asp-validation-for="Phone" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">
                            Contraseña
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input asp-for="Password"
                                   type="password"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Crea una contraseña segura" />
                        </div>
                        <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
                            Confirmar Contraseña
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
                                   placeholder="Confirma tu contraseña" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <i class="fas fa-user-plus text-sky-500 group-hover:text-sky-400"></i>
                        </span>
                        Crear Cuenta
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-sm text-gray-600">
                        ¿Ya tienes una cuenta?
                        <a asp-action="Login" class="font-medium text-sky-600 hover:text-sky-500 transition-colors">
                            Inicia sesión aquí
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .scrollable-container {
        max-height: 100vh;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: #0ea5e9 #f1f5f9;
    }

        .scrollable-container::-webkit-scrollbar {
            width: 6px;
        }

        .scrollable-container::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        .scrollable-container::-webkit-scrollbar-thumb {
            background: #0ea5e9;
            border-radius: 3px;
        }

            .scrollable-container::-webkit-scrollbar-thumb:hover {
                background: #0284c7;
            }
</style>
